apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt
spec:
  acme:
    email: {{ cert_manager_email }}
    privateKeySecretRef:
      name: letsencrypt-private-key
    server: {{ cert_manager_url }}
    solvers:
      - http01:
          ingress:
            class: openshift-default